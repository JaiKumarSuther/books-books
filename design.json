{
    "designSystem": {
        "metadata": {
            "name": "Modern E-commerce Design System",
            "version": "1.0",
            "type": "Multi-page E-commerce Platform",
            "description": "Comprehensive design system for building modern, conversion-optimized e-commerce websites"
        },
        "visualIdentity": {
            "designLanguage": "Clean, modern, minimal with strategic use of color",
            "aestheticPrinciples": [
                "White space dominance for clarity",
                "Strategic color accents for CTAs and urgency",
                "Card-based layouts for content organization",
                "Consistent rounded corners throughout",
                "Subtle shadows for depth and hierarchy"
            ],
            "brandingApproach": "Logo-centric with simple, bold typography"
        },
        "colorSystem": {
            "foundation": {
                "primary": {
                    "value": "#0D6EFD",
                    "name": "Electric Blue",
                    "usage": [
                        "Primary CTAs",
                        "Links",
                        "Active states",
                        "Countdown timers",
                        "Brand accents"
                    ],
                    "variants": {
                        "light": "#E7F1FF",
                        "dark": "#0B5ED7",
                        "hover": "#0A58CA"
                    }
                },
                "secondary": {
                    "value": "#6C757D",
                    "name": "Neutral Gray",
                    "usage": [
                        "Secondary text",
                        "Borders",
                        "Disabled states"
                    ]
                },
                "accent": {
                    "value": "#FF3B3B",
                    "name": "Alert Red",
                    "usage": [
                        "Sale badges",
                        "Discount tags",
                        "Stock warnings",
                        "Delete actions"
                    ],
                    "variants": {
                        "light": "#FFE5E5",
                        "dark": "#CC2F2F"
                    }
                }
            },
            "semantic": {
                "success": {
                    "value": "#10B981",
                    "usage": [
                        "In stock indicators",
                        "Success messages",
                        "Positive ratings"
                    ]
                },
                "warning": {
                    "value": "#F59E0B",
                    "usage": [
                        "Low stock warnings",
                        "Alert messages"
                    ]
                },
                "info": {
                    "value": "#3B82F6",
                    "usage": [
                        "Information badges",
                        "Tooltips"
                    ]
                }
            },
            "neutral": {
                "white": "#FFFFFF",
                "gray50": "#F9FAFB",
                "gray100": "#F3F4F6",
                "gray200": "#E5E7EB",
                "gray300": "#D1D5DB",
                "gray400": "#9CA3AF",
                "gray500": "#6B7280",
                "gray600": "#4B5563",
                "gray700": "#374151",
                "gray800": "#1F2937",
                "gray900": "#111827",
                "black": "#000000"
            },
            "backgroundSystem": {
                "page": "#FFFFFF",
                "section": "#F9FAFB",
                "card": "#FFFFFF",
                "sidebar": "#F3F4F6",
                "footer": "#111827"
            }
        },
        "typography": {
            "fontStacks": {
                "primary": {
                    "family": "'Inter', 'SF Pro Display', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
                    "fallback": "system-ui, sans-serif",
                    "characteristics": "Modern, clean, highly legible"
                },
                "secondary": {
                    "family": "'Roboto', 'Helvetica Neue', Arial, sans-serif",
                    "usage": "Alternative for body text"
                }
            },
            "typeScale": {
                "display": {
                    "size": "48px",
                    "weight": "700",
                    "lineHeight": "1.1",
                    "letterSpacing": "-0.02em",
                    "usage": "Hero headlines, major page titles"
                },
                "h1": {
                    "size": "36px",
                    "weight": "700",
                    "lineHeight": "1.2",
                    "letterSpacing": "-0.01em",
                    "usage": "Page titles"
                },
                "h2": {
                    "size": "28px",
                    "weight": "600",
                    "lineHeight": "1.3",
                    "letterSpacing": "0",
                    "usage": "Section headers"
                },
                "h3": {
                    "size": "22px",
                    "weight": "600",
                    "lineHeight": "1.4",
                    "usage": "Subsection headers, product names"
                },
                "h4": {
                    "size": "18px",
                    "weight": "600",
                    "lineHeight": "1.4",
                    "usage": "Card titles, category names"
                },
                "body-large": {
                    "size": "16px",
                    "weight": "400",
                    "lineHeight": "1.6",
                    "usage": "Primary body text, descriptions"
                },
                "body": {
                    "size": "14px",
                    "weight": "400",
                    "lineHeight": "1.5",
                    "usage": "Standard text, labels"
                },
                "body-small": {
                    "size": "13px",
                    "weight": "400",
                    "lineHeight": "1.4",
                    "usage": "Secondary text, metadata"
                },
                "caption": {
                    "size": "12px",
                    "weight": "400",
                    "lineHeight": "1.3",
                    "usage": "Captions, helper text"
                },
                "overline": {
                    "size": "11px",
                    "weight": "600",
                    "lineHeight": "1.2",
                    "letterSpacing": "0.08em",
                    "textTransform": "uppercase",
                    "usage": "Labels, tags, categories"
                }
            },
            "weights": {
                "light": "300",
                "regular": "400",
                "medium": "500",
                "semibold": "600",
                "bold": "700",
                "extrabold": "800"
            }
        },
        "spacing": {
            "baseUnit": "4px",
            "scale": {
                "0": "0px",
                "1": "4px",
                "2": "8px",
                "3": "12px",
                "4": "16px",
                "5": "20px",
                "6": "24px",
                "8": "32px",
                "10": "40px",
                "12": "48px",
                "16": "64px",
                "20": "80px",
                "24": "96px",
                "32": "128px"
            },
            "component": {
                "cardPadding": "16px",
                "sectionPadding": "48px 0",
                "containerPadding": "0 16px",
                "buttonPadding": "12px 24px",
                "inputPadding": "10px 16px"
            }
        },
        "layout": {
            "grid": {
                "columns": 12,
                "gutter": "24px",
                "margin": {
                    "mobile": "16px",
                    "tablet": "24px",
                    "desktop": "48px"
                }
            },
            "breakpoints": {
                "xs": "0px",
                "sm": "640px",
                "md": "768px",
                "lg": "1024px",
                "xl": "1280px",
                "2xl": "1536px"
            },
            "containers": {
                "full": "100%",
                "wide": "1440px",
                "default": "1280px",
                "narrow": "1024px",
                "text": "768px"
            },
            "pageStructure": {
                "header": {
                    "height": {
                        "mobile": "60px",
                        "desktop": "80px"
                    },
                    "position": "sticky",
                    "zIndex": 1000
                },
                "sidebar": {
                    "width": "280px",
                    "position": "fixed on desktop, collapsible on mobile"
                },
                "mainContent": {
                    "maxWidth": "calc(100% - 280px)",
                    "padding": "24px"
                },
                "footer": {
                    "minHeight": "400px",
                    "background": "dark"
                }
            }
        },
        "components": {
            "header": {
                "structure": {
                    "topBar": {
                        "height": "36px",
                        "background": "gray-50",
                        "content": [
                            "Promotional message",
                            "Utility links (currency, language, help)"
                        ],
                        "fontSize": "12px"
                    },
                    "mainNav": {
                        "height": "80px",
                        "sections": [
                            "Logo",
                            "Category dropdown + Search",
                            "User actions (account, wishlist, cart)"
                        ],
                        "background": "white",
                        "borderBottom": "1px solid gray-200"
                    },
                    "megaMenu": {
                        "style": "Full-width dropdown",
                        "background": "white",
                        "shadow": "large",
                        "padding": "32px"
                    }
                },
                "elements": {
                    "logo": {
                        "maxWidth": "140px",
                        "height": "40px",
                        "position": "left"
                    },
                    "searchBar": {
                        "width": "500px (desktop)",
                        "height": "44px",
                        "borderRadius": "8px",
                        "border": "1px solid gray-300",
                        "components": [
                            "Category dropdown",
                            "Search input",
                            "Search button"
                        ],
                        "iconSize": "20px"
                    },
                    "navLinks": {
                        "spacing": "32px",
                        "fontSize": "15px",
                        "fontWeight": "500",
                        "activeIndicator": "2px underline, primary color"
                    },
                    "iconButtons": {
                        "size": "40px",
                        "iconSize": "22px",
                        "spacing": "12px",
                        "badge": {
                            "size": "18px",
                            "position": "top-right",
                            "background": "primary",
                            "fontSize": "11px"
                        }
                    }
                }
            },
            "sidebar": {
                "width": "280px",
                "background": "white",
                "padding": "24px 0",
                "categories": {
                    "header": {
                        "padding": "12px 20px",
                        "background": "primary",
                        "color": "white",
                        "fontSize": "15px",
                        "fontWeight": "600",
                        "borderRadius": "8px 8px 0 0"
                    },
                    "item": {
                        "height": "44px",
                        "padding": "0 20px",
                        "icon": {
                            "size": "24px",
                            "marginRight": "12px"
                        },
                        "text": {
                            "fontSize": "14px",
                            "fontWeight": "400"
                        },
                        "arrow": {
                            "size": "16px",
                            "position": "right"
                        },
                        "hover": {
                            "background": "gray-50"
                        },
                        "active": {
                            "background": "primary-light",
                            "color": "primary",
                            "fontWeight": "500"
                        }
                    },
                    "subcategories": {
                        "indent": "48px",
                        "fontSize": "13px"
                    }
                },
                "filters": {
                    "section": {
                        "marginTop": "24px",
                        "padding": "16px 20px",
                        "borderTop": "1px solid gray-200"
                    },
                    "title": {
                        "fontSize": "14px",
                        "fontWeight": "600",
                        "marginBottom": "12px"
                    },
                    "priceRange": {
                        "sliderColor": "primary",
                        "inputHeight": "36px"
                    }
                }
            },
            "productCard": {
                "variants": {
                    "grid": {
                        "aspectRatio": "3:4",
                        "layout": "vertical"
                    },
                    "list": {
                        "aspectRatio": "1:1",
                        "layout": "horizontal"
                    }
                },
                "structure": {
                    "container": {
                        "background": "white",
                        "borderRadius": "12px",
                        "border": "1px solid gray-200",
                        "overflow": "hidden",
                        "transition": "all 0.3s ease"
                    },
                    "imageContainer": {
                        "position": "relative",
                        "aspectRatio": "1:1",
                        "overflow": "hidden"
                    },
                    "image": {
                        "width": "100%",
                        "height": "100%",
                        "objectFit": "cover",
                        "transition": "transform 0.3s ease"
                    },
                    "badges": {
                        "position": "absolute",
                        "top": "12px",
                        "left": "12px",
                        "zIndex": 10,
                        "gap": "8px"
                    },
                    "quickActions": {
                        "position": "absolute",
                        "top": "12px",
                        "right": "12px",
                        "opacity": "0 (visible on hover)",
                        "transition": "opacity 0.3s ease"
                    },
                    "content": {
                        "padding": "16px"
                    }
                },
                "elements": {
                    "badge": {
                        "height": "24px",
                        "padding": "0 10px",
                        "borderRadius": "4px",
                        "fontSize": "11px",
                        "fontWeight": "600",
                        "textTransform": "uppercase",
                        "types": {
                            "sale": {
                                "background": "#FF3B3B",
                                "color": "white"
                            },
                            "new": {
                                "background": "#10B981",
                                "color": "white"
                            },
                            "hot": {
                                "background": "#F59E0B",
                                "color": "white"
                            }
                        }
                    },
                    "quickAction": {
                        "size": "36px",
                        "background": "white",
                        "borderRadius": "50%",
                        "shadow": "0 2px 8px rgba(0,0,0,0.1)",
                        "iconSize": "18px"
                    },
                    "category": {
                        "fontSize": "12px",
                        "color": "gray-500",
                        "marginBottom": "6px",
                        "textTransform": "uppercase",
                        "letterSpacing": "0.05em"
                    },
                    "title": {
                        "fontSize": "15px",
                        "fontWeight": "500",
                        "lineHeight": "1.4",
                        "marginBottom": "8px",
                        "maxLines": 2,
                        "overflow": "ellipsis"
                    },
                    "rating": {
                        "marginBottom": "8px",
                        "starSize": "14px",
                        "starColor": "#FFC107",
                        "reviewCount": {
                            "fontSize": "12px",
                            "color": "gray-500",
                            "marginLeft": "6px"
                        }
                    },
                    "price": {
                        "container": {
                            "display": "flex",
                            "alignItems": "baseline",
                            "gap": "8px",
                            "marginBottom": "12px"
                        },
                        "current": {
                            "fontSize": "20px",
                            "fontWeight": "700",
                            "color": "primary"
                        },
                        "original": {
                            "fontSize": "15px",
                            "fontWeight": "400",
                            "color": "gray-400",
                            "textDecoration": "line-through"
                        },
                        "discount": {
                            "fontSize": "13px",
                            "fontWeight": "600",
                            "color": "accent",
                            "marginLeft": "4px"
                        }
                    },
                    "progressBar": {
                        "height": "6px",
                        "background": "gray-200",
                        "borderRadius": "3px",
                        "fill": {
                            "background": "gradient (primary to accent)",
                            "borderRadius": "3px"
                        },
                        "label": {
                            "fontSize": "11px",
                            "color": "gray-600",
                            "marginTop": "4px"
                        }
                    },
                    "addToCart": {
                        "height": "40px",
                        "borderRadius": "8px",
                        "fontSize": "14px",
                        "fontWeight": "600",
                        "fullWidth": true
                    }
                },
                "states": {
                    "hover": {
                        "container": {
                            "shadow": "0 8px 24px rgba(0,0,0,0.12)",
                            "transform": "translateY(-4px)"
                        },
                        "image": {
                            "transform": "scale(1.05)"
                        },
                        "quickActions": {
                            "opacity": "1"
                        }
                    }
                }
            },
            "buttons": {
                "variants": {
                    "primary": {
                        "background": "primary",
                        "color": "white",
                        "border": "none",
                        "hover": {
                            "background": "primary-dark"
                        }
                    },
                    "secondary": {
                        "background": "white",
                        "color": "primary",
                        "border": "1px solid primary",
                        "hover": {
                            "background": "primary-light"
                        }
                    },
                    "outline": {
                        "background": "transparent",
                        "color": "gray-700",
                        "border": "1px solid gray-300",
                        "hover": {
                            "background": "gray-50",
                            "borderColor": "gray-400"
                        }
                    },
                    "ghost": {
                        "background": "transparent",
                        "color": "gray-700",
                        "border": "none",
                        "hover": {
                            "background": "gray-100"
                        }
                    },
                    "danger": {
                        "background": "accent",
                        "color": "white",
                        "border": "none",
                        "hover": {
                            "background": "accent-dark"
                        }
                    }
                },
                "sizes": {
                    "small": {
                        "height": "32px",
                        "padding": "0 16px",
                        "fontSize": "13px"
                    },
                    "medium": {
                        "height": "40px",
                        "padding": "0 20px",
                        "fontSize": "14px"
                    },
                    "large": {
                        "height": "48px",
                        "padding": "0 24px",
                        "fontSize": "15px"
                    }
                },
                "properties": {
                    "borderRadius": "8px",
                    "fontWeight": "600",
                    "transition": "all 0.2s ease",
                    "cursor": "pointer",
                    "disabled": {
                        "opacity": "0.5",
                        "cursor": "not-allowed"
                    }
                }
            },
            "badges": {
                "countdown": {
                    "container": {
                        "display": "inline-flex",
                        "gap": "8px"
                    },
                    "unit": {
                        "width": "52px",
                        "height": "52px",
                        "background": "primary",
                        "color": "white",
                        "borderRadius": "8px",
                        "display": "flex",
                        "flexDirection": "column",
                        "alignItems": "center",
                        "justifyContent": "center"
                    },
                    "value": {
                        "fontSize": "18px",
                        "fontWeight": "700",
                        "lineHeight": "1"
                    },
                    "label": {
                        "fontSize": "10px",
                        "fontWeight": "500",
                        "textTransform": "uppercase",
                        "marginTop": "4px"
                    }
                },
                "stock": {
                    "low": {
                        "background": "warning-light",
                        "color": "warning-dark",
                        "icon": "alert-circle"
                    },
                    "inStock": {
                        "background": "success-light",
                        "color": "success-dark",
                        "icon": "check-circle"
                    },
                    "outOfStock": {
                        "background": "gray-100",
                        "color": "gray-600",
                        "icon": "x-circle"
                    }
                }
            },
            "featureCards": {
                "layout": "4 columns on desktop, 2 on tablet, 1 on mobile",
                "card": {
                    "padding": "24px",
                    "background": "transparent",
                    "textAlign": "center"
                },
                "icon": {
                    "size": "56px",
                    "color": "primary",
                    "marginBottom": "16px",
                    "style": "outline or duotone"
                },
                "title": {
                    "fontSize": "16px",
                    "fontWeight": "600",
                    "marginBottom": "8px"
                },
                "description": {
                    "fontSize": "13px",
                    "color": "gray-600",
                    "lineHeight": "1.5"
                }
            },
            "categoryCircles": {
                "container": {
                    "display": "flex",
                    "gap": "24px",
                    "overflowX": "auto",
                    "padding": "16px 0"
                },
                "item": {
                    "minWidth": "120px",
                    "textAlign": "center"
                },
                "circle": {
                    "size": "120px",
                    "borderRadius": "50%",
                    "background": "gradient or solid color",
                    "display": "flex",
                    "alignItems": "center",
                    "justifyContent": "center",
                    "marginBottom": "12px",
                    "border": "3px solid white",
                    "shadow": "0 4px 12px rgba(0,0,0,0.1)",
                    "transition": "transform 0.3s ease",
                    "hover": {
                        "transform": "scale(1.05)"
                    }
                },
                "icon": {
                    "size": "48px",
                    "color": "white or contrasting color"
                },
                "label": {
                    "fontSize": "14px",
                    "fontWeight": "500",
                    "color": "gray-800"
                }
            },
            "banners": {
                "hero": {
                    "height": {
                        "mobile": "400px",
                        "desktop": "600px"
                    },
                    "background": "image with overlay gradient",
                    "overlay": "linear-gradient(to right, rgba(0,0,0,0.6), transparent)",
                    "content": {
                        "position": "left center",
                        "maxWidth": "600px",
                        "padding": "48px"
                    },
                    "title": {
                        "fontSize": "48px",
                        "fontWeight": "700",
                        "color": "white",
                        "marginBottom": "16px"
                    },
                    "subtitle": {
                        "fontSize": "20px",
                        "color": "white",
                        "marginBottom": "32px",
                        "opacity": "0.9"
                    },
                    "cta": {
                        "size": "large",
                        "variant": "primary"
                    }
                },
                "promotional": {
                    "aspectRatio": "21:9",
                    "borderRadius": "12px",
                    "overflow": "hidden",
                    "position": "relative"
                }
            },
            "productDetail": {
                "layout": "2-column (image left, details right)",
                "imageGallery": {
                    "main": {
                        "aspectRatio": "1:1",
                        "maxHeight": "600px",
                        "borderRadius": "12px",
                        "border": "1px solid gray-200"
                    },
                    "thumbnails": {
                        "size": "80px",
                        "gap": "12px",
                        "layout": "vertical or horizontal",
                        "border": "2px solid transparent",
                        "activeBorder": "primary",
                        "borderRadius": "8px"
                    }
                },
                "details": {
                    "badge": {
                        "marginBottom": "12px"
                    },
                    "title": {
                        "fontSize": "32px",
                        "fontWeight": "700",
                        "marginBottom": "12px"
                    },
                    "rating": {
                        "marginBottom": "16px",
                        "includeReviewCount": true
                    },
                    "stock": {
                        "marginBottom": "16px"
                    },
                    "description": {
                        "fontSize": "15px",
                        "lineHeight": "1.6",
                        "color": "gray-600",
                        "marginBottom": "24px"
                    },
                    "price": {
                        "current": {
                            "fontSize": "36px",
                            "fontWeight": "700",
                            "color": "accent"
                        },
                        "original": {
                            "fontSize": "24px"
                        },
                        "marginBottom": "24px"
                    },
                    "countdown": {
                        "marginBottom": "24px"
                    },
                    "options": {
                        "marginBottom": "24px",
                        "label": {
                            "fontSize": "14px",
                            "fontWeight": "600",
                            "marginBottom": "12px"
                        },
                        "variants": {
                            "size": "40px",
                            "minWidth": "50px",
                            "border": "1px solid gray-300",
                            "borderRadius": "6px",
                            "activeBorder": "2px solid primary",
                            "activeBackground": "primary-light"
                        }
                    },
                    "quantity": {
                        "height": "48px",
                        "buttonWidth": "40px",
                        "inputWidth": "60px",
                        "marginBottom": "24px"
                    },
                    "actions": {
                        "gap": "12px",
                        "addToCart": {
                            "flex": "1",
                            "size": "large"
                        },
                        "buyNow": {
                            "flex": "1",
                            "size": "large",
                            "variant": "secondary"
                        }
                    },
                    "meta": {
                        "marginTop": "24px",
                        "borderTop": "1px solid gray-200",
                        "paddingTop": "24px",
                        "fontSize": "13px",
                        "lineHeight": "2",
                        "label": {
                            "fontWeight": "600",
                            "color": "gray-700"
                        },
                        "value": {
                            "color": "gray-600"
                        }
                    }
                },
                "tabs": {
                    "height": "48px",
                    "borderBottom": "1px solid gray-200",
                    "marginTop": "48px",
                    "tab": {
                        "padding": "0 24px",
                        "fontSize": "15px",
                        "fontWeight": "500",
                        "color": "gray-600",
                        "activeColor": "primary",
                        "activeBorder": "2px solid primary"
                    },
                    "content": {
                        "padding": "32px 0"
                    }
                }
            },
            "footer": {
                "structure": {
                    "newsletter": {
                        "background": "primary",
                        "padding": "48px 0",
                        "color": "white",
                        "title": {
                            "fontSize": "28px",
                            "fontWeight": "700",
                            "marginBottom": "8px"
                        },
                        "subtitle": {
                            "fontSize": "16px",
                            "opacity": "0.9",
                            "marginBottom": "24px"
                        },
                        "form": {
                            "maxWidth": "500px",
                            "display": "flex",
                            "gap": "12px",
                            "input": {
                                "flex": "1",
                                "height": "52px",
                                "borderRadius": "8px",
                                "border": "none",
                                "padding": "0 20px"
                            },
                            "button": {
